{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"declaration": true,
		"outDir": "dist",
		"baseUrl": ".",
		"rootDir": ".",
		"paths": {
			"@/*": ["./src/*"],
			"react": ["./node_modules/@types/react"]
		}
	}
}
